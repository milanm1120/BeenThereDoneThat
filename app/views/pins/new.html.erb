<h1> Add A New Pin </h1>

<h3>Pins#new</h3>

<%= render partial: "layouts/error", locals: { object: @pin} %>

<%= form_with(model: @pin) do |f| %>
    Date Visited: <%= f.date_field :date %></br>
    Rating: <%= f.number_field :rating, min: 1, max: 5 %></br>
    <%= f.number_field :user_id %>

        <h3> Destination</h3>                               <!-- nested form name="pin[destination][attribute]" -->
        <%= f.fields_for :destination do |d| %>
            City: <%= d.text_field :city %></br>
            Country: <%= d.text_field :country %></br>
        <% end %>
    
    <%= f.submit "Drop Pin" %>
    <% end %>
