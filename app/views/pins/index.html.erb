<h1>Pins#Index</h1>


<% if @destination %>
    <%= @destination.city %>, <%= @destination.country %>
<% else %>
    <h1> All Pins </h1>
<% end %>

<%= render partial: "pin", collection: @pins, as: :p %>

<% if @destination %>
    <%= button_to "New Pin", new_destination_pin_path, :method => :get %>
<% else %>
    <%= button_to "New Pin", new_pin_path, :method => :get %>
<% end %>
